{
  "name": "@burmese-youth-in-tech/storywar-api",
  "version": "0.0.1",
  "description": "Story War API for Societies",
  "main": "src/app.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "concurrently \"cd ./packages && yarn build \" \"npx tsc\"",
    "start": "node dist/app.js",
    "dev": "concurrently \"cd ./packages && yarn dev \" \"npx tsc -w && nodemon dist/app.js\"",
    "clean": "rm -rf dist && rm -rf ./packages/lib",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "eslint": "npx eslint .",
    "init": "cp ./.env.test .env"
  },
  "lint-staged": {
    "*.ts": "yarn eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.41",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "commitizen": "^4.3.0",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "root": "^3.2.0",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "storywar-api",
    "storywar-backend",
    "burmese-youth-in-tech"
  ],
  "workspaces": {
    "packages": [
      "*"
    ],
    "nohoist": [
      "**/@babel/preset-env",
      "**/@babel/preset-typescript",
      "**/@babel/preset-react"
    ]
  },
  "private": true,
  "author": "lwinmoepaing <lwinmoepaing.dev@gmail.com>",
  "license": "MIT"
}
